<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="alexandr.tsiulkin.gmail.com">
        <createTable tableName="message">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="text" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="tag" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="alexandr.tsiulkin.gmail.com">
        <createTable tableName="users">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="tinyint(1)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="alexandr.tsiulkin@gmail.com">
        <createTable tableName="user_role">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="alexandr.tsiulkin@gmail.com">
        <addForeignKeyConstraint baseTableName="user_role" baseColumnNames="user_id"
                                 constraintName="fk_user_role_user"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="5" author="alexandr.tsiulkin@gmail.com">
        <renameColumn tableName="user_role"
                      oldColumnName="id"
                      newColumnName="role_id"
                      columnDataType="int"/>
    </changeSet>
    <changeSet id="6" author="alexandr.tsiulkin@gmail.com">
        <renameColumn tableName="user_role"
                      oldColumnName="role"
                      newColumnName="role_name"
                      columnDataType="varchar(10)"/>
    </changeSet>
    <changeSet id="7" author="alexandr.tsiulkin@gmail.com">
        <addAutoIncrement columnDataType="int"
                          columnName="role_id"
                          incrementBy="1"
                          schemaName="sweatter"
                          startWith="1"
                          tableName="user_role"/>
    </changeSet>
    <changeSet id="8" author="alexandr.tsiulkin@gmail.com">
        <renameColumn tableName="user_role"
                      oldColumnName="role_id"
                      newColumnName="id"
                      columnDataType="int"
        />
    </changeSet>
    <changeSet id="9" author="alexandr.tsiulkin@gmail.com">
        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          schemaName="sweatter"
                          startWith="1"
                          tableName="user_role"/>
    </changeSet>
    <changeSet id="10" author="alexandr.tsiulkin@gmail.com">
        <addColumn tableName="message">
            <column name="user_id"
                    position="4"
                    type="int">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>